<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<ScrollPane fitToWidth="true" 
            prefHeight="800" 
            maxHeight="800"
            styleClass="detail-scroll-pane"
            stylesheets="@../../Styles/formation-detail.css"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.formation.FormationDetailFrontController">

    <VBox spacing="30">
        <!-- Hero Section with enhanced styling -->
        <VBox spacing="15" styleClass="hero-section">
            <padding><Insets top="40" right="40" bottom="40" left="40"/></padding>
            <Label fx:id="titleLabel" styleClass="hero-title"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label fx:id="categorieLabel" styleClass="category-label"/>
                <Label fx:id="startDateLabel" styleClass="start-date"/>
            </HBox>
        </VBox>
        
        <!-- Content Container with improved spacing -->
        <VBox styleClass="content-section">
            <!-- Video Section -->
            <StackPane fx:id="videoContainer">
                <ImageView fx:id="videoThumbnail" fitWidth="800" fitHeight="450" preserveRatio="true"/>
                <Button fx:id="playVideoButton" text="Play Video" styleClass="play-button"/>
            </StackPane>
            
            <!-- Description Section -->
            <VBox styleClass="description-section" spacing="15">
                <Label text="Description" styleClass="section-title"/>
                <Text fx:id="descriptionText" wrappingWidth="740" styleClass="section-content"/>
            </VBox>
            
            <!-- Details Section -->
            <GridPane styleClass="details-grid">
                <Label text="Details" styleClass="section-title"
                       GridPane.columnSpan="2" GridPane.rowIndex="0"/>
                       
                <Label text="Start Date" styleClass="details-label" 
                       GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <Label fx:id="dateDebutLabel" styleClass="details-value" 
                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                
                <Label text="End Date" styleClass="details-label" 
                       GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <Label fx:id="dateFinLabel" styleClass="details-value" 
                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                
                <Label text="Spots Available" styleClass="details-label" 
                       GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <Label fx:id="nbrpartLabel" styleClass="details-value" 
                       GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                
                <Label text="Price" styleClass="details-label" 
                       GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <Label fx:id="prixLabel" styleClass="details-value" 
                       GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>
            
            <!-- Action Buttons with better positioning -->
            <HBox spacing="20" alignment="CENTER_RIGHT" styleClass="action-buttons">
                <Button text="Register Now" onAction="#handleRegister"
                        styleClass="action-button, register-button"/>
                <Button text="Close" onAction="#handleClose"
                        styleClass="action-button, close-button"/>
            </HBox>
        </VBox>
    </VBox>
</ScrollPane>