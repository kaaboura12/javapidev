<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controllers.formation.FormationListFrontController"
      spacing="20" 
      styleClass="main-container"
      stylesheets="@../../Styles/formations.css">

    <!-- Search and Filter Section -->
    <VBox spacing="20" styleClass="search-section">
        <HBox spacing="15" alignment="CENTER_LEFT">
            <!-- Search Field with Icon -->
            <HBox alignment="CENTER_LEFT" styleClass="search-box">
                <Region prefWidth="20" prefHeight="20" 
                        styleClass="search-icon"
                        style="-fx-shape: 'M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z';"/>
                
                <TextField fx:id="searchField" 
                          promptText="Search formations..." 
                          prefWidth="300"
                          styleClass="search-field"/>
            </HBox>

            <!-- Category Filter -->
            <ComboBox fx:id="categoryCombo" 
                      prefWidth="200"
                      styleClass="category-combo"/>
        </HBox>
    </VBox>

    <!-- Scrollable Content Area -->
    <ScrollPane VBox.vgrow="ALWAYS" fitToWidth="true" style="-fx-background-color: transparent;">
        <FlowPane fx:id="formationsContainer" hgap="20" vgap="20" style="-fx-padding: 20;">
            <padding>
                <Insets top="10" right="20" bottom="20" left="20"/>
            </padding>
        </FlowPane>
    </ScrollPane>

    <!-- Pagination -->
    <Pagination fx:id="formationsPagination" style="-fx-padding: 10;"/>
</VBox>