<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" styleClass="main-container" stylesheets="@../../Styles/badwrod.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.backforum.BadWordsController">
    <children>
        <!-- Header Bar -->
        <HBox layoutY="0.0" prefHeight="60.0" prefWidth="1000.0" styleClass="header-bar" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
            <children>
                <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                    <children>
                        <Label styleClass="header-title" text="BAD WORDS MANAGEMENT">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                        <Label styleClass="header-subtitle" text="ADMIN DASHBOARD" />
                    </children>
                </VBox>
            </children>
        </HBox>

        <!-- Main Content -->
        <VBox layoutY="60.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="60.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            
            <!-- Add New Bad Word Section -->
            <VBox spacing="10.0" styleClass="section-container">
                <Label text="Add New Bad Word" styleClass="section-title">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <HBox spacing="10.0">
                    <TextField fx:id="wordField" promptText="Enter bad word" HBox.hgrow="ALWAYS" />
                    <TextField fx:id="replacementField" promptText="Enter replacement (e.g. ****)" HBox.hgrow="ALWAYS" />
                    <Button fx:id="addButton" text="Add Word" onAction="#handleAddWord" styleClass="action-button" />
                </HBox>
            </VBox>

            <!-- Bad Words List -->
            <VBox spacing="10.0" VBox.vgrow="ALWAYS" styleClass="section-container">
                <Label text="Bad Words List" styleClass="section-title">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <TableView fx:id="badWordsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="wordColumn" text="Word" prefWidth="300.0" />
                        <TableColumn fx:id="replacementColumn" text="Replacement" prefWidth="300.0" />
                        <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="200.0" />
                    </columns>
                    <placeholder>
                        <Label text="No bad words in the list" />
                    </placeholder>
                </TableView>
            </VBox>
        </VBox>
    </children>
</AnchorPane> 