<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.shape.Rectangle?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controllers.Article.FrontAddGalerieController"
      style="-fx-background-color: linear-gradient(to bottom right, #27273c, #333347, #3d2f3f);"
      spacing="20"
      stylesheets="@../../Styles/navigation.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label text="CRÉER MA GALERIE" styleClass="app-title" style="-fx-text-fill: #ff7e5f; -fx-font-size: 24px; -fx-font-weight: bold;"/>
        <Rectangle width="2" height="25" fill="#ff7e5f" opacity="0.3"/>
    </HBox>

    <!-- Error Label -->
    <Label fx:id="errorLabel"
           style="-fx-text-fill: #ff7e5f; -fx-font-weight: bold;"
           visible="false"/>

    <!-- Form -->
    <VBox spacing="15" style="-fx-background-color: rgba(255,255,255,0.1); -fx-padding: 20; -fx-background-radius: 10;">
        <Label text="Informations de la galerie" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
        
        <VBox spacing="10">
            <Label text="Nom de la galerie" style="-fx-text-fill: white;"/>
            <TextField fx:id="nomField" promptText="Entrez le nom de votre galerie"
                      style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-prompt-text-fill: rgba(255,255,255,0.5); -fx-background-radius: 5; -fx-padding: 8 15;"/>
        </VBox>
        
        <VBox spacing="10">
            <Label text="Description" style="-fx-text-fill: white;"/>
            <TextArea fx:id="descriptionArea" promptText="Décrivez votre galerie"
                     style="-fx-background-color: #2d2d45; 
                            -fx-text-fill: white; 
                            -fx-prompt-text-fill: rgba(255,255,255,0.5); 
                            -fx-background-radius: 5; 
                            -fx-padding: 8 15;
                            -fx-control-inner-background: #2d2d45;
                            -fx-focus-color: #ff7e5f;
                            -fx-faint-focus-color: #ff7e5f22;
                            -fx-text-box-border: transparent;
                            -fx-border-color: rgba(255,255,255,0.1);
                            -fx-border-radius: 5;"
                     prefRowCount="4" wrapText="true"/>
        </VBox>
        
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button fx:id="cancelBtn" text="Annuler" 
                    style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 15;"
                    onAction="#handleCancel"/>
            <Button fx:id="saveBtn" text="Créer ma galerie" 
                    style="-fx-background-color: linear-gradient(to right, #ff7e5f, #feb47b); 
                           -fx-text-fill: white; 
                           -fx-font-weight: bold; 
                           -fx-background-radius: 5; 
                           -fx-padding: 8 15;
                           -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 3, 0, 0, 1);"
                    onAction="#handleSave"/>
        </HBox>
    </VBox>
</VBox> 