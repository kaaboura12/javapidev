<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.web.WebView?>

<VBox spacing="20" alignment="CENTER" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Article.StripePaymentController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Paiement sécurisé" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    
    <VBox spacing="10" alignment="CENTER">
        <Label text="Montant à payer:" style="-fx-font-size: 16px;"/>
        <Label fx:id="amountLabel" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    </VBox>

    <WebView fx:id="stripeWebView" VBox.vgrow="ALWAYS" prefHeight="400"/>
    
    <Label fx:id="errorLabel" style="-fx-text-fill: red;" managed="false" visible="false"/>
    
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="cancelButton" text="Annuler" onAction="#handleCancel" style="-fx-background-color: #ff4444; -fx-text-fill: white;"/>
    </HBox>
</VBox> 