<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox spacing="20" style="-fx-background-color: #1e1e30;" 
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="Controllers.Article.FrontShowCommandesController">
    
    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>

    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label text="Mes Ventes" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #ff7e5f;"/>
    </HBox>

    <!-- Statistics Cards -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <!-- Total Sales Card -->
        <VBox styleClass="stat-card" style="-fx-background-color: #2d2d45; -fx-padding: 20; -fx-background-radius: 10;">
            <Label text="Total des Ventes" style="-fx-font-size: 16px; -fx-text-fill: #e0e0e0;"/>
            <Label fx:id="totalSalesLabel" text="0.00 Dt" 
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #ff7e5f;"/>
        </VBox>

        <!-- Total Products Card -->
        <VBox styleClass="stat-card" style="-fx-background-color: #2d2d45; -fx-padding: 20; -fx-background-radius: 10;">
            <Label text="Produits Vendus" style="-fx-font-size: 16px; -fx-text-fill: #e0e0e0;"/>
            <Label fx:id="totalProductsLabel" text="0" 
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #ff7e5f;"/>
        </VBox>
    </HBox>

    <!-- Search and Filter Section -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Rechercher une commande..." 
                  style="-fx-background-color: #2d2d45; -fx-text-fill: white; -fx-prompt-text-fill: #8d8d8d;
                         -fx-padding: 8 15; -fx-background-radius: 5;"
                  prefWidth="300"/>
        <ComboBox fx:id="filterComboBox" promptText="Filtrer par date"
                  style="-fx-background-color: #2d2d45; -fx-text-fill: white;"/>
    </HBox>

    <!-- Orders Section with Scrolling -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" 
                style="-fx-background: transparent; -fx-background-color: transparent;">
        <VBox fx:id="ordersContainer" spacing="15">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <!-- Les cartes de commandes seront ajoutÃ©es ici dynamiquement -->
        </VBox>
    </ScrollPane>

    <!-- Back Button -->
    <HBox alignment="CENTER_LEFT">
        <Button fx:id="backButton" text="Retour" onAction="#handleBack"
                style="-fx-background-color: #ff7e5f; -fx-text-fill: white; 
                       -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;"/>
    </HBox>

</VBox> 