<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<VBox spacing="20" style="-fx-background-color: linear-gradient(to bottom right, #27273c, #333347, #3d2f3f);" stylesheets="@../../Styles/navigation.css,@../../Styles/article_cards.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Article.FrontArticleController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label style="-fx-text-fill: #ff7e5f; -fx-font-size: 44px; -fx-font-weight: bold;" styleClass="app-title" text="GALERIE" />
        <Rectangle fill="#ff7e5f" height="25" opacity="0.3" width="2" />
    </HBox>

    <!-- Search and Filter Section -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <TextField fx:id="searchField" prefHeight="46.0" prefWidth="330.0" promptText="Rechercher un article..." style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-prompt-text-fill: rgba(255,255,255,0.5); -fx-background-radius: 5; -fx-padding: 8 15;" />

        <ComboBox fx:id="categorieFilter" centerShape="false" prefHeight="41.0" prefWidth="180.0" promptText="CatÃ©gorie" style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-prompt-text-fill: rgba(255,255,255,0.5); -fx-background-radius: 5;" />

        <ComboBox fx:id="triFilter" prefHeight="40.0" prefWidth="180.0" promptText="Trier par" style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-prompt-text-fill: rgba(255,255,255,0.5); -fx-background-radius: 5;" />

        <Region HBox.hgrow="ALWAYS" />

        <Button fx:id="monEspaceBtn" onAction="#handleMonEspace" prefHeight="41.0" prefWidth="122.0" style="-fx-background-color: linear-gradient(to right, #ff7e5f, #feb47b);                        -fx-text-fill: white;                        -fx-font-weight: bold;                        -fx-background-radius: 5;                        -fx-padding: 8 15;                        -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);" text="Mon espace" />
    </HBox>

    <!-- Error Label -->
    <Label fx:id="errorLabel" style="-fx-text-fill: #ff7e5f; -fx-font-weight: bold;" visible="false" />

    <!-- ScrollPane for Articles Grid -->
    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;" VBox.vgrow="ALWAYS">
        <padding>
            <Insets top="10" />
        </padding>
        <!-- Centrer horizontalement le contenu -->
        <HBox alignment="CENTER">
            <!-- Articles Grid -->
            <GridPane fx:id="articlesGrid" hgap="20" style="-fx-background-color: transparent;" vgap="20">
                <padding>
                    <Insets top="10" />
                </padding>
            </GridPane>
        </HBox>
    </ScrollPane>
</VBox>
