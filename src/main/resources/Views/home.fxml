<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="Controllers.HomeController"
          stylesheets="@../Styles/navigation.css">
          
    <VBox alignment="CENTER" spacing="20">
        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>
        
        <Label text="Welcome to ArtXCope" style="-fx-font-size: 32px; -fx-font-weight: bold;"/>
        <Label text="Click on EVENTS in the navigation bar to see the events listing" 
               style="-fx-font-size: 18px; -fx-text-fill: #666666;"/>
        
        <Button fx:id="goToEventsBtn" text="View Events" 
                style="-fx-background-color: #d17842; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20;"/>
    </VBox>
</StackPane> 